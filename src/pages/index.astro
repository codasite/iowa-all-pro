---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iowa All Pro - Home">
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Iowa All Pro</h1>
      <p class="text-lg text-gray-600 mb-8">
        Professional services website - WordPress to Astro conversion in progress
      </p>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Conversion Status</h2>
        <div class="space-y-2">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
            <span class="text-gray-700">Astro project initialized</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-yellow-500 rounded-full mr-3"></div>
            <span class="text-gray-700">WordPress export pending</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-gray-300 rounded-full mr-3"></div>
            <span class="text-gray-500">Content migration</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-gray-300 rounded-full mr-3"></div>
            <span class="text-gray-500">Styling conversion</span>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
